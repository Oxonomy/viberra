# HTTP/HTTPS endpoints
API_URL=localhost/api
WEB_HOST=localhost
WEB_PORT=8443

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173

# SSL/TLS Configuration
ENABLE_HSTS=false

# Redis
REDIS_URL=redis://redis:6379/0

# TURN/STUN (coturn)
TURN_HOST=localhost
TURN_PORT=3478
TURN_TLS_PORT=5349
TURN_REALM=example.com
# CRITICAL: Change this secret! Generate with: openssl rand -hex 32
# Server will refuse to start with default value
TURN_SECRET=CHANGE_THIS_TO_RANDOM_VALUE
TURN_MIN_PORT=49160
TURN_MAX_PORT=49200

# Control-API
HEARTBEAT_INTERVAL_SEC=15
ROOM_TTL_SEC=300

# DB (cloud Postgres)
DB_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME

# Agent
CONTROL_WSS_URL=ws://localhost:8080/ws/agent
AGENT_VERSION=0.1.0

# PASETO
PASETO_KID=v4-YYYYMM-xxxx
PASETO_PRIV_PEM_PATH=/path/to/secrets/paseto_v4.priv.pem
PASETO_PUB_PEM_PATH=/path/to/secrets/paseto_v4.pub.pem
